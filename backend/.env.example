# LLM Provider (gemini or openai)
LLM_PROVIDER=gemini

# Gemini Configuration (Get your API key from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI Configuration (optional fallback)
OPENAI_API_KEY=

# Qdrant Cloud Configuration
QDRANT_URL=https://your-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=book_chunks

# Database Configuration
# For production: postgresql+asyncpg://user:password@host/database?sslmode=require
# For development: sqlite+aiosqlite:///./chat_history.db
DATABASE_URL=sqlite+aiosqlite:///./chat_history.db

# CORS Configuration (comma-separated origins)
# IMPORTANT: Include all frontend origins that will access this backend
# For development, include localhost ports your frontend may use
# For production, include your deployed frontend URL(s)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:8080

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# RAG Configuration
CONFIDENCE_THRESHOLD=0.7
EMBEDDING_MODEL=models/embedding-001
CHAT_MODEL=gemini-2.5-flash
MAX_CONTEXT_CHUNKS=5

# Chunking Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# JWT Configuration (for authentication)
# IMPORTANT: Change this secret in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
